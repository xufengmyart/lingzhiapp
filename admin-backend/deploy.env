# 阿里云服务器部署配置
# Alibaba Cloud Server Deployment Configuration

# 服务器连接信息
REMOTE_HOST="your-alibaba-cloud-ip"
REMOTE_USER="root"
REMOTE_PORT="22"

# 远程部署目录
REMOTE_DIR="/var/www/backend"

# 备份目录
BACKUP_DIR="/var/www/backups"

# 数据库配置
DB_TYPE="postgresql"
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="lingzhi_ecosystem"
DB_USER="lingzhi_user"
DB_PASSWORD="your-db-password"

# Nginx 配置
NGINX_SITE_NAME="meiyueart"
DOMAIN="meiyueart.com"
SSL_EMAIL="admin@meiyueart.com"

# Gunicorn 配置
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS="gevent"
GUNICORN_THREADS=100
GUNICORN_TIMEOUT=120

# 服务名称
SERVICE_NAME="meiyueart-backend"

# 日志目录
LOG_DIR="/var/log/meiyueart-backend"
