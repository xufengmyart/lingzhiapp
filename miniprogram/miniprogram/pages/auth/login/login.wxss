/* pages/auth/login/login.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx;
}

.login-box {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* Logo */
.logo {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.logo-text {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 表单 */
.form {
  margin-bottom: 40rpx;
}

.form-item {
  position: relative;
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1890ff;
  background-color: #fff;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 88rpx;
}

.toggle-text {
  font-size: 24rpx;
  color: #1890ff;
}

/* 按钮 */
.form-actions {
  margin-bottom: 32rpx;
}

.btn-block {
  width: 100%;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 链接 */
.form-links {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.link {
  color: #1890ff;
  padding: 0 8rpx;
}

.divider {
  color: #d9d9d9;
}

/* 测试提示 */
.demo-tips {
  margin-top: 40rpx;
  padding: 24rpx;
  background-color: #f0f5ff;
  border-radius: 8rpx;
}

.tips-title {
  display: block;
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.tips-item {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}
