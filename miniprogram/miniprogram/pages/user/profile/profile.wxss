/* pages/user/profile/profile.wxss */

/* 用户头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  width: 24rpx;
  height: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-real-name {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 灵值卡片 */
.lingzhi-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -40rpx 40rpx 40rpx;
  padding: 40rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  position: relative;
  z-index: 10;
}

.lingzhi-value {
  font-size: 64rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.lingzhi-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 菜单列表 */
.menu-list {
  margin: 0 40rpx 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  width: 24rpx;
  height: 24rpx;
}

/* 退出登录 */
.logout-btn {
  margin: 0 40rpx 40rpx;
}

.btn-block {
  width: 100%;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}
